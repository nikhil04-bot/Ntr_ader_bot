body {
    background-color: #111;
    color: #eee;
    font-family: Arial, sans-serif;
    padding: 20px;
}
.container {
    max-width: 600px;
    margin: auto;
}
.signal-box {
    border-radius: 10px;
    padding: 20px;
    margin-bottom: 20px;
}
.call {
    background-color: #013220;
    border: 2px solid #0f0;
}
.put {
    background-color: #330000;
    border: 2px solid #f00;
}
.nosignal {
    color: #aaa;
    font-style: italic;
}
